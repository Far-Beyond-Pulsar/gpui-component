#!/usr/bin/env bash
# Legacy bootstrap script - redirects to new setup script

echo "⚠️  This script is deprecated. Please use the new setup script:"
echo ""
echo "For Unix-like systems (Linux/macOS):"
echo "  ./script/setup-dev-environment.sh"
echo ""
echo "For Windows (PowerShell):"
echo "  .\script\setup-dev-environment.ps1"
echo ""
echo "Running new setup script now..."
echo ""

# Automatically run the new script
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
bash "$SCRIPT_DIR/setup-dev-environment.sh"
